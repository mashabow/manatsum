{
    "env": {
        "es6": true,
        "node" : true,
        "browser" : true
    },

    "ecmaFeatures": {
        "modules": true
    },

    "rules": {
        "curly": [2, "multi-line"],
        "no-loop-func": 1,
        "no-multi-spaces": 1,
        "no-unused-vars": 1,
        "no-use-before-define": 0,
        "quotes": [2, "single", "avoid-escape"],
        "space-infix-ops": [1],
        "yoda": [2, "never", { "exceptRange": true }]
    }
}
